@{
  Layout = "_Layout";
}
@model PierresBakery.Models.Flavor;

<h2>Flavor Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This Flavor hasn't been assigned any treats yet!</p>
  <p>You can do this by selecting a specific treat and clicking 'Add Flavor'</p>
}
else
{
  <h4>Associated Flavors:</h4>

  @foreach(var join in Model.JoinEntities)
  {   
    @Html.ActionLink($"{join.Treat.Name}", "Details", "Treats", new { id = join.TreatId})
  }
}
<hr />
@Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "btn btn-outline-primary"})
@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId }, new { @class = "btn btn-outline-primary"})
@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId }, new { @class = "btn btn-outline-primary"})
