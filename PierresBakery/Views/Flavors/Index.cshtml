@{
  Layout = "_Layout";
}

@using PierresBakery.Models;
@model IEnumerable<PierresBakery.Models.Flavor>;

  <div class="progress">
  <div class="progress-bar progress-bar-striped" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;"></div>
</div>
<h1>All Flavors</h1>

@if (@Model.Any())
{
  <ul class="list-group">
    @foreach (Flavor flavor in Model)
    {
      <li class="list-group-item d-flex justify-content-between align-items-center">
        @Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })
      </li>
    }
  </ul>
}
else
{
  <div class="text-center">
    <h3>No flavors have been created yet!</h3>
    <p>Click below to create one.</p>
  </div>
}
<br>
@Html.ActionLink("Add Flavor", "Create", new { }, new { @class = "btn btn-primary"})
@Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "btn btn-primary"})