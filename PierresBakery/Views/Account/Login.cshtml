@{
  Layout = "_Layout";
}

@using PierresBakery.ViewModels;
@model LoginViewModel

<h2>User Login</h2>
<hr />
<div class="w-50 m-auto">
@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.LabelFor(user => user.Email)
    @Html.TextBoxFor(user=> user.Email, new { @class = "form-control", placeholder = "Email", required = "required"})
  </div>
  <div class="form-group">
    @Html.LabelFor(user => user.Password)
    @Html.PasswordFor(user => user.Password, new { @class = "form-control", placeholder = "Enter Password", required = "required"})
  </div>
  <input type="submit" value="Log In" class="btn btn-info" />
}
</div>