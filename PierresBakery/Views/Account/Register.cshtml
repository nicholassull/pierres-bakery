@{
  Layout = "_Layout";
}

@using PierresBakery.ViewModels;
@model RegisterViewModel

<h2>Register a new user</h2>
<hr />
<div class="w-50">
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
  <div class="form-group">
    @Html.LabelFor(user => user.Email)
    @Html.TextBoxFor(user=> user.Email, new { @class = "form-control", placeholder = "Email", required = "required"})
  </div>
  <div class="form-group">
    @Html.LabelFor(user => user.Password)
    @Html.PasswordFor(user => user.Password, new { @class = "form-control", placeholder = "Enter Password", required = "required"})
  </div>
  <div class="form-group">
    @Html.LabelFor(user => user.ConfirmPassword)
    @Html.PasswordFor(user => user.ConfirmPassword, new { @class = "form-control", placeholder = "Enter Password", required = "required"})
  </div>
  <input type="submit" value="Register" class="btn btn-info" />
}
</div>